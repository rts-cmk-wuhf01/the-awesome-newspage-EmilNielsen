<div class="editors-pick-post-area section-padding-80-50">
        <div class="container">
            <div class="row">
                <!-- Editors Pick -->
                <div class="col-12 col-md-7 col-lg-9">
                    <div class="section-heading">
                        <h6>Editorâ€™s Pick</h6>
                    </div>

                    <div class="row">
                        <% if(typeof latestComments != "undefined") { %>
                            <% latestComments.forEach(comment => { %>
                                <% let commentDate = new Date(comment.date); %>
                        <!-- Single Post -->
                        <div class="col-12 col-lg-4">
                                <div class="single-blog-post">
                                    <div class="post-thumb">
                                        <a href="#"><img src="/style/bg-img/1.jpg" alt=""></a>
                                    </div>
                                    <div class="post-data">
                                        <a href="#" class="post-title">
                                            <h6><%= comment.name %></h6>
                                        </a>
                                        <div class="post-meta">
                                            <div class="post-date"><a href="#"><%= dateAndTime.format(commentDate, "hh:mm A, MMMM DD, YYYY") %></a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>
                <!-- World News -->
                <%- include('world-news.ejs') %>
            </div>
        </div>
    </div>