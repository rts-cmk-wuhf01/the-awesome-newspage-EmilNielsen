<div class="col-12 col-md-5 col-lg-3">
		<div class="section-heading">
			<h6>World News</h6>
		</div>

		<% if(typeof latestComments != "undefined") { %>
        <% latestComments.forEach(comment => { %>
            <% let commentDate = new Date(comment.date); %>

		<!-- Single Post -->
		<div class="single-blog-post style-2">
			<div class="post-thumb">
				<a href="#"><img src="/style/bg-img/7.jpg" alt=""></a>
			</div>
			<div class="post-data">
				<a href="#" class="post-title">
					<h6><%= comment.name %></h6>
				</a>
				<div class="post-meta">
					<div class="post-date"><a href="#"><%= dateAndTime.format(commentDate, "hh:mm A, MMMM DD, YYYY") %></a></div>
				</div>
			</div>
		</div>

		<% }); %>
            <% } %>

	</div>