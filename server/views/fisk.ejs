<script>
function rng(max) {
	return Math.floor(Math.random() * Math.floor(max));
}

function rgb() {
	document.body.style.backgroundColor = `rgb(${r}, ${g}, ${b})`;
	r = rng(255);
	g = rng(255);
	b = rng(255);
}

let r = rng(255);
